<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Formers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="spinnerStyle">@style/spinner</item>-->

    </style>

    <style name="secondary_text_style">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="bold_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">true</item>
        <item name="android:background">@drawable/bg_white_round_spinner</item>
    </style>

</resources>